<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a0ed1200" />
            <stroke
                android:width="1dp"
                android:color="#add60100" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff00500"
                android:endColor="#ffe00600"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ffdd0303" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>