<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff68ed0d" />
            <stroke
                android:width="1dp"
                android:color="#ff7cff6c" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff1bb700"
                android:endColor="#ff76d101"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ff049d08" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>