<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/sfondo_arancione">

    <Button
        android:shadowColor="#ff000000"
        android:shadowDx="1.9"
        android:shadowDy="1.5"
        android:shadowRadius="3.0"
        android:textAllCaps="true"
        android:textStyle="italic|bold"
        android:maxLines="1"
        android:id="@+id/delete_btn"
        android:text="@string/route_delete_btn"
        android:textSize="@dimen/route_edit_delete_size"
        android:textColor="#ffffff"
        style="@style/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:textColor="#ffffff"
        android:shadowColor="#ff000000"
        android:shadowDx="1.9"
        android:shadowDy="1.5"
        android:shadowRadius="3.0"
        android:textAllCaps="true"
        android:textStyle="italic|bold"
        android:maxLines="1"
        android:id="@+id/edit_btn"
        android:text="@string/route_edit_btn"
        android:textSize="@dimen/route_edit_delete_size"
        style="@style/button_white_black_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>