<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="175dp"
    style="@style/route_theme"
    android:background="@drawable/sfondo_arancione">

    <include layout="@layout/template_route_operator"
        android:id="@+id/route"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/select_btn"
        android:text="@string/select_btn_text"
        android:textSize="@dimen/route_edit_delete_size"
        style="@style/button_white_black_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/route" />

</RelativeLayout>
